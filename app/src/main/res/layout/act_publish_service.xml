<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:ignore="SpUsage,RtlHardcoded" >
    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/service_name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/service_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_service_name"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/service_store_name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/service_store_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_store_name"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/contact"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/contact_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_contact"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/contact_phone_num"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/contact_phone_num_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_contact_phone"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/service_address"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/service_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_service_address"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/service_describe"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/service_describe_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:hint="@string/input_service_describe"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@null"
                    android:gravity="top"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2"
                android:layout_marginTop="@dimen/dp_10"/>

            <RelativeLayout
                android:id="@+id/service_area_selector_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:text="@string/service_area"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15" />
                <TextView
                    android:id="@+id/service_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/service_area_right_arrow"
                    android:layout_marginRight="@dimen/dp_10"/>
                <ImageView
                    android:id="@+id/service_area_right_arrow"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/right_arrow_gray"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <RelativeLayout
                android:id="@+id/service_type_selector_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:text="@string/service_type"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15" />
                <TextView
                    android:id="@+id/service_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/service_type_right_arrow"
                    android:layout_marginRight="@dimen/dp_10"/>
                <ImageView
                    android:id="@+id/service_type_right_arrow"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/right_arrow_gray"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>

            <include layout="@layout/view_upload_image"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>