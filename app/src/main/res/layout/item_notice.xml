<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    tools:ignore="RtlHardcoded,HardcodedText,SpUsage">
    <ImageView
        android:id="@+id/notice_header_iv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_header"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notice_header_iv"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:text="通知消息" />
        <TextView
            android:id="@+id/notice_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/word_gray"
            android:textSize="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:text="2018-12-12"/>

        <TextView
            android:id="@+id/notice_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/word_gray"
            android:textSize="@dimen/dp_15"
            android:text="明天汽配城休息,请大家不要上班明天汽配城休息,请大家不要上班"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/notice_title"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_widthPercent="85%"/>
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>