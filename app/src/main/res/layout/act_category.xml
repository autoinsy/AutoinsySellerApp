<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/title_bar"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">
        <ListView
            android:id="@+id/main_category_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"
            android:dividerHeight="@dimen/dp_1"
            android:scrollbars="none"
            app:layout_widthPercent="40%"
            android:scrollingCache="false"/>
        <ListView
            android:id="@+id/sub_category_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/main_category_lv"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_5"
            android:horizontalSpacing="@dimen/dp_5"
            app:layout_widthPercent="60%"
            android:scrollingCache="false"
            android:listSelector="@color/popup_right_bg_selected"/>
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>