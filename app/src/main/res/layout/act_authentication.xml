<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="InefficientWeight,SpUsage,RtlHardcoded,RtlSymmetry">
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15">
            <EditText
                android:id="@+id/input_id_number_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/id_number"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_15"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/orange_text"/>
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/register_upload_id_front_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_widthPercent="48%"
                app:layout_heightPercent="28%">
                <RelativeLayout
                    android:id="@+id/upload_id_front_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rect_corner_light_orange"
                    app:layout_heightPercent="100%">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/authentication_bg"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/id_front"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/camera"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_30"/>
                </RelativeLayout>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/register_upload_id_back_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_widthPercent="48%"
                app:layout_heightPercent="28%"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/upload_id_back_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rect_corner_light_orange"
                    app:layout_heightPercent="100%">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/authentication_bg"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/id_back"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/camera"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_30"/>
                </RelativeLayout>
            </android.support.percent.PercentRelativeLayout>
        </android.support.percent.PercentRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15">
            <EditText
                android:id="@+id/input_business_licence_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/input_business_licence_number"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_15"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/orange_text"/>
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/register_upload_business_licence_front_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_widthPercent="48%"
                app:layout_heightPercent="50%">
                <RelativeLayout
                    android:id="@+id/upload_business_licence_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rect_corner_light_orange"
                    app:layout_heightPercent="100%">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/authentication_bg"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/business_licence"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_20"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/camera"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_30"/>
                </RelativeLayout>
            </android.support.percent.PercentRelativeLayout>
        </android.support.percent.PercentRelativeLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/rect_corner_orange"
            android:layout_marginTop="@dimen/dp_35"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:text="@string/register"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:orientation="horizontal"
        android:background="@mipmap/foot_bg"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telephone_number"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/orange_text"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>