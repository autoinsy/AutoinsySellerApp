<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_corner_white"
    android:orientation="vertical"
    tools:ignore="SpUsage,HardcodedText,RtlHardcoded">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <ImageView
            android:id="@+id/discover_header"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_header" />

        <TextView
            android:id="@+id/discover_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/discover_header"
            android:text="小米"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/discover_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_seller_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/discover_header"
            android:text="2018-12-09 08：12：12"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <Button
            android:id="@+id/discover_already_friend"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:background="@drawable/rect_corner_red"
            android:text="@string/already_friend"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

        <com.autionsy.seller.views.GridViewInScrollView
            android:id="@+id/item_discover_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dip"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dip" />
    </LinearLayout>
</LinearLayout>